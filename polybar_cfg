[colors]
  ;background = ${xrdb:color0:#222}
  background = #222
  background-alt = #444
  ;foreground = ${xrdb:color7:#222}
  foreground = #dfdfdf
  foreground-alt = #555
  primary = #ffb52a
  secondary = #e60053
  alert = #bd2c40
  underline = #01579b

[bar/bar]
  modules-right  = filesystem temperature proc_thread_counter memory cpu bat date 
  modules-left   = bspwm xwindow
  modules-center = 
  separator =  |   
  separator-padding = 2
  separator-foreground = ${colors.foreground-alt}

  fixed-center = true

  ;monitor = ${env:MONITOR:HDMI-1}
  width = 100%
  height = 20
  ;offset-x = 1%
  ;offset-y = 1%
  ;radius = 6.0

  background = ${colors.background}
  foreground = ${colors.foreground}

  line-size = 2
  line-color = #f00

  border-size = 4
  border-color = #00000000

  padding-left = 0
  padding-right = 2

  module-margin-left = 1
  module-margin-right = 2

  font-0 = fixed:pixelsize=10;1
  font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
  font-2 = siji:pixelsize=10;1

  tray-position = right
  tray-padding = 2

[module/date]
  type = custom/script
  exec = date +"%B %a%d - %H:%M:%S"
  interval = 1
  format-prefix-foreground  = ${colors.foreground-alt}
  format-underline          = ${colors.underline}

[module/date_raw]
  type = custom/script
  exec = date +"%H:%M:%S"
  interval = 1
  format-prefix-foreground  = ${colors.foreground-alt}
  format-underline          = ${colors.underline}

[module/proc_thread_counter]
  type = custom/script
  exec = proc=$(ps -e| wc -l) ; th=$(ls /proc/*/status | xargs cat 2> /dev/null | grep Threads | awk '{print $2}' | awk '{s+=$1} END {print s}') ; echo $(echo $proc - 1 | bc)"/"$th
  interval = 60
  format-prefix = "proc/th: "
  format-prefix-foreground  = ${colors.foreground-alt}
  format-underline          = ${colors.underline}

[module/bat]
  type = custom/script
  exec = upower -i /org/freedesktop/UPower/devices/battery_BAT0 | grep -E "percent|time" | sed -z 's|\n| |g' |  awk '{print $7} {print " - "} {print$4} {print "h"}'  | sed -z 's|\n| |g' 
  interval = 60
  format-prefix = "bat: "
  format-prefix-foreground  = ${colors.foreground-alt}
  format-underline          = ${colors.underline}
  #format-background         = ${colors.background-alt}

[module/cpu]
  type = internal/cpu
  interval = 10
  format-prefix = "cpu: "
  format-prefix-foreground  = ${colors.foreground-alt}
  format-underline          = ${colors.underline}
  #format-background         = ${colors.background-alt}

[module/memory]
  type = internal/memory
  interval = 10
  format-prefix = "mem: "
  format-prefix-foreground = ${colors.foreground-alt}
  format-underline = ${colors.underline}

